{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"paths": {
			"@config/*": ["config/*"],
			"@controllers/*": ["controllers/*"],
			"@models/*": ["models/*"],
			"@plugins/*": ["plugins/*"],
			"@routes/*": ["routes/*"],
			"@schemas/*": ["schemas/*"],
			"@services/*": ["services/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
