{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": null,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"outDir": "dist",
		"rootDir": "src",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"moduleDetection": "force"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
