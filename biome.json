{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": null
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedFunctionParameters": {
					"fix": "none",
					"level": "warn",
					"options": {}
				},
				"noUnusedVariables": {
					"fix": "none",
					"level": "warn",
					"options": {}
				},
				"useImportExtensions": {
					"fix": "safe",
					"level": "error",
					"options": {
						"forceJsExtensions": true
					}
				}
			},
			"recommended": false,
			"suspicious": {
				"noConsole": {
					"fix": "none",
					"level": "info",
					"options": {
						"allow": ["info"]
					}
				}
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": false
	}
}
