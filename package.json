{
	"name": "backend",
	"version": "1.0.0",
	"main": "./src/app.ts",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"dev": "tsx --watch --env-file .env.dev ./src/app.ts",
		"prod": "tsx --watch --env-file .env.prod ./src/app.ts",
		"build": "tsc && tsc-alias -p tsconfig.json && yarn build:emails",
		"dev:emails": "tsx --env-file .env.dev scripts/build-email-templates.ts",
		"build:emails": "tsx --env-file .env.prod scripts/build-email-templates.ts",
		"start:dev": "node --env-file .env.dev dist/app.js",
		"start:prod": "node --env-file .env.prod dist/app.js",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
		"pre-commit": "lint-staged && yarn typecheck",
		"pre-push": "yarn typecheck && yarn lint",
		"db:generate": "drizzle-kit generate --name",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"prepare": "husky install"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.922.0",
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.1.0",
		"@fastify/jwt": "^10.0.0",
		"@fastify/multipart": "^9.3.0",
		"bcrypt": "^6.0.0",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"drizzle-zod": "^0.8.3",
		"fastify": "^5.4.0",
		"fastify-plugin": "^5.0.1",
		"handlebars": "^4.7.8",
		"nodemailer": "^7.0.6",
		"pg": "^8.16.3",
		"tsc-alias": "^1.8.16",
		"uuid": "^11.1.0",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/mjml": "^4.7.4",
		"@types/node": "^24.0.10",
		"@types/nodemailer": "^7.0.1",
		"@types/pg": "^8.15.5",
		"lint-staged": "12.3.2",
		"drizzle-kit": "^0.31.4",
		"husky": "^8.0.0",
		"mjml": "^4.16.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	},
	"lint-staged": {
		"*.{ts,js,json}": [
			"yarn lint"
		]
	}
}
