{
	"name": "backend",
	"version": "1.0.0",
	"main": "./src/app.ts",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"dev": "tsx --watch --env-file .env.development ./src/app.ts",
		"prod": "tsx --watch --env-file .env.production ./src/app.ts",
		"start:dev": "node --env-file .env.development dist/app.js",
		"start:prod": "node --env-file .env.production dist/app.js",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --files-ignore-unknown=true",
		"prepare": "husky install",
		"pre-commit": "lint-staged"
	},
	"dependencies": {
		"bcrypt": "^6.0.0",
		"drizzle-orm": "^0.44.2",
		"fastify": "^5.4.0",
		"jsonwebtoken": "^9.0.2",
		"lint-staged": "12.3.2",
		"pg": "^8.16.3",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.0.10",
		"husky": "^8.0.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	},
	"lint-staged": {
		"*.{js,ts,json,md}": [
			"biome check --files-ignore-unknown=true"
		]
	}
}
